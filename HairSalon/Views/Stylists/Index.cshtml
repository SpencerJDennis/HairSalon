@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists Page</h1>

@if (Model.Count == 0)
{
  <h2>You have not added any Stylists yet!</h2>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new Stylist to your Salon!", "Create")</p>